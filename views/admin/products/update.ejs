<!DOCTYPE html>
<html lang="en">
<head>
    <title>Edit Product</title>
    <link href="./style.css" rel="stylesheet">
</head>
<body class="bg-gray-100 font-sans leading-normal tracking-normal">
    <div class="max-w-4xl mx-auto p-8 bg-white shadow-lg rounded-lg mt-10">
        <h1 class="text-3xl font-semibold text-center text-gray-700 mb-8">Edit Product</h1>
        
        <form action="/admin/products/update/<%= product.id %>" method="POST">
            <div class="space-y-4">
                <!-- Product Name -->
                <div>
                    <label for="name" class="block text-gray-700 font-medium">Name:</label>
                    <input type="text" name="name" id="name" value="<%= product.name %>" required class="w-full p-3 mt-1 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500">
                </div>

                <!-- Product Price -->
                <div>
                    <label for="price" class="block text-gray-700 font-medium">Price:</label>
                    <input type="number" name="price" id="price" value="<%= product.price %>" required class="w-full p-3 mt-1 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500">
                </div>

                <!-- Product Description -->
                <div>
                    <label for="description" class="block text-gray-700 font-medium">Description:</label>
                    <textarea name="description" id="description" required class="w-full p-3 mt-1 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500" rows="4"><%= product.description %></textarea>
                </div>

                <!-- Product Category -->
                <div>
                    <label for="category" class="block text-gray-700 font-medium">Category:</label>
                    <input type="text" name="category" id="category" value="<%= product.category %>" required class="w-full p-3 mt-1 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500">
                </div>

                <!-- Product Stock -->
                <div>
                    <label for="stock" class="block text-gray-700 font-medium">Stock:</label>
                    <input type="number" name="stock" id="stock" value="<%= product.stock %>" required class="w-full p-3 mt-1 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500">
                </div>

                <!-- Image URL -->
                <div>
                    <label for="image" class="block text-gray-700 font-medium">Image URL:</label>
                    <input type="text" name="image" id="image" value="<%= product.image %>" class="w-full p-3 mt-1 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500">
                </div>

                <!-- Submit Button -->
                <div class="mt-6">
                    <button type="submit" class="w-full bg-yellow-500 text-white p-3 rounded-md text-lg hover:bg-yellow-600 focus:outline-none focus:ring-2 focus:ring-yellow-500">
                        Update Product
                    </button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
