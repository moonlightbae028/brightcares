<!DOCTYPE html>
<html lang="en">
<head>
    <title>Checkout</title>
    <link href="/style.css" rel="stylesheet">
</head>
<body class="bg-gray-100 flex justify-center items-center min-h-screen">
    <div class="bg-white p-6 rounded-lg shadow-lg w-1/3">
        <h2 class="text-2xl font-semibold text-gray-700 mb-4">Checkout</h2>

        <!-- User Details -->
        <div class="mb-4">
            <h3 class="font-medium text-lg">Shipping Information</h3>
            <p><strong>Name:</strong> <%= user.fname + " " + user.lname %></p>
            <p><strong>Contact:</strong> <%= user.contacts %></p>
            <p><strong>Address:</strong> <%= user.address %></p>
        </div>

        <!-- Product Details -->
        <div class="mb-4">
            <h3 class="font-medium text-lg">Product Summary</h3>
            <img src="<%= product.image %>" alt="Product Image" class="w-full h-40 object-cover rounded">
            <p class="mt-2"><strong>Product:</strong> <%= product.name %></p>
            <p><strong>Price:</strong> â‚±<%= product.price %></p>
        </div>

        <!-- Payment Method -->
        <form action="/checkout/<%= product.id %>" method="POST">
            <label>Quantity:</label>
            <input type="number" name="quantity" value="1" min="1" required class="w-full border p-2 rounded mb-4">
            
            <!-- Include hidden field for price -->
            <input type="hidden" name="price" value="<%= product.price %>">
        
            <label>Delivery Method:</label>
            <select name="deliveryMethod" class="w-full border p-2 rounded mb-4" required>
                <option value="COD">Cash on Delivery (COD)</option>
                <option value="Pickup">Pick Up</option>
            </select>
        
            <button type="submit" class="w-full bg-green-500 text-white py-2 px-4 rounded hover:bg-green-600">
                Confirm Order
            </button>
        </form>
    </div>
</body>
</html>
